@model HotelBookingManager.DataAccess.Models.Booking

@{
    ViewData["Title"] = "Tạo booking";
    var createUrl = Url.Action("Create", "Bookings");
}

<h2>Tạo booking</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label class="form-label">Khách sạn</label>
        <select asp-for="HotelId"
                class="form-select"
                asp-items="ViewBag.HotelId"
                onchange="location.href='@createUrl?hotelId=' + this.value">
            <option value="">-- Chọn khách sạn --</option>
        </select>
        <span asp-validation-for="HotelId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Phòng</label>
        <select asp-for="RoomId"
                class="form-select"
                asp-items="ViewBag.RoomId">
            <option value="">-- Chọn phòng --</option>
        </select>
        <span asp-validation-for="RoomId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Check-in</label>
        <input asp-for="CheckInDate" class="form-control" type="date" />
        <span asp-validation-for="CheckInDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Check-out</label>
        <input asp-for="CheckOutDate" class="form-control" type="date" />
        <span asp-validation-for="CheckOutDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
