@model IEnumerable<HotelBookingManager.BusinessObjects.DTO.BookingDto>
@{
    ViewData["Title"] = "Quản lý booking";
    var currentStatus = (ViewBag.Status as string) ?? "Pending";
    var roleClaim = User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Role)?.Value;
    var roleId = string.IsNullOrEmpty(roleClaim) ? 3 : int.Parse(roleClaim);
}

<!-- Google Fonts & Icons -->
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600;700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    :root {
        --primary: #0d6efd;
        --success: #198754;
        --warning: #ffc107;
        --danger: #dc3545;
        --dark: #1a1a1a;
        --gray: #6c757d;
        --light: #f8f9fa;
    }

    body {
        font-family: 'Inter', sans-serif;
    }

    h2 {
        font-family: 'Playfair Display', serif;
        font-weight: 700;
    }

    .hero-bg {
        background: linear-gradient(rgba(0,0,0,0.65), rgba(0,0,0,0.65));
        height: 260px;
        border-radius: 0 0 32px 32px;
    }

    .booking-card {
        border: none;
        border-radius: 20px;
        background: white;
        box-shadow: 0 8px 25px rgba(0,0,0,0.08);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .booking-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 16px 40px rgba(0,0,0,0.12);
        }

    .btn-rounded {
        border-radius: 50px;
        padding: 0.65rem 1.5rem;
        font-weight: 500;
        transition: all 0.3s ease;
    }

        .btn-rounded:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(0,0,0,0.15);
        }

    .status-badge {
        padding: 0.55rem 1rem;
        border-radius: 50px;
        font-weight: 600;
        font-size: 0.9rem;
    }

    .badge-pending {
        background: var(--warning);
        color: var(--dark);
    }

    .badge-confirmed {
        background: var(--primary);
        color: white;
    }

    .badge-checkedin {
        background: #17a2b8;
        color: white;
    }

    .badge-completed {
        background: var(--success);
        color: white;
    }

    .badge-cancelled {
        background: var(--danger);
        color: white;
    }
</style>

<!-- HERO HEADER -->
<div class="hero-bg position-relative mb-5">
    <div class="container h-100 d-flex flex-column justify-content-center text-white text-center px-4">
        <h1 class="display-5 fw-bold mb-2">Quản lý booking</h1>
        <p class="lead opacity-75 mb-0">Quản lý đặt phòng và trạng thái</p>
    </div>
</div>

<!-- MAIN CONTENT -->
<div class="container pb-5">
    <!-- FILTER CARD -->
    <div class="card border-0 shadow-xl rounded-4 mb-5" style="margin-top: -80px; position: relative; z-index: 10;">
        <div class="card-body p-4">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center gap-4">
                <h5 class="fw-bold mb-0 text-dark">Danh sách booking</h5>

                <!-- Filter form -->
                <form asp-action="Index" method="get" class="d-flex align-items-center gap-3">
                    <label class="form-label mb-0 fw-semibold">Trạng thái:</label>
                    <select name="status" class="form-select form-select-lg rounded-pill shadow-sm w-auto" onchange="this.form.submit()">
                        <option value="Pending" selected="@(currentStatus == "Pending")">Pending</option>
                        <option value="Confirmed" selected="@(currentStatus == "Confirmed")">Confirmed</option>
                        <option value="CheckedIn" selected="@(currentStatus == "CheckedIn")">Checked In</option>
                        <option value="Completed" selected="@(currentStatus == "Completed")">Completed</option>
                        <option value="Cancelled" selected="@(currentStatus == "Cancelled")">Cancelled</option>
                        <option value="All" selected="@(currentStatus == "All")">Tất cả</option>
                    </select>
                </form>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center py-5 rounded-4 shadow-sm">
            <i class="bi bi-calendar-x fs-1 mb-3 opacity-75 d-block"></i>
            <h4 class="fw-bold">Chưa có booking nào trong hệ thống</h4>
            <p class="text-muted mb-4">Hãy chờ khách hàng đặt phòng hoặc kiểm tra lại bộ lọc.</p>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var b in Model)
            {
                <div class="col-lg-6">
                    <div class="booking-card p-4">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h5 class="fw-bold mb-0">Booking #@b.BookingId</h5>
                            <span class="status-badge @(b.Status == "Pending" ? "badge-pending" : b.Status == "Confirmed" ? "badge-confirmed" : b.Status == "CheckedIn" ? "badge-checkedin" : b.Status == "Completed" ? "bg-success" : "badge-cancelled")">
                                @b.Status
                            </span>
                        </div>

                        <div class="row g-3 mb-3">
                            <div class="col-6">
                                <small class="text-muted d-block">Khách hàng</small>
                                <strong>@(b.CustomerName ?? $"User #{b.UserId}")</strong>
                            </div>
                            <div class="col-6">
                                <small class="text-muted d-block">Khách sạn</small>
                                <strong>@(b.HotelName ?? $"Hotel #{b.HotelId}")</strong>
                            </div>
                            <div class="col-6">
                                <small class="text-muted d-block">Phòng</small>
                                <strong>@(b.RoomNumber ?? $"Room #{b.RoomId}")</strong>
                            </div>
                            <div class="col-6">
                                <small class="text-muted d-block">Tổng tiền</small>
                                <strong class="text-success">@b.TotalPrice.ToString("N0")đ</strong>
                            </div>
                            <div class="col-6">
                                <small class="text-muted d-block">Check-in</small>
                                <strong>@b.CheckInDate.ToString("dd/MM/yyyy")</strong>
                            </div>
                            <div class="col-6">
                                <small class="text-muted d-block">Check-out</small>
                                <strong>@b.CheckOutDate.ToString("dd/MM/yyyy")</strong>
                            </div>
                        </div>

                        @if (roleId == 1 || roleId == 2)
                        {
                            <form asp-action="ChangeStatus" method="post" class="d-flex align-items-center gap-3 mt-3">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="bookingId" value="@b.BookingId" />
                                <select name="status" class="form-select form-select-lg rounded-pill shadow-sm flex-fill">
                                    <option value="Pending" selected="@(b.Status == "Pending")">⏳ Chờ xác nhận</option>
                                    <option value="Confirmed" selected="@(b.Status == "Confirmed")">✅ Đã xác nhận</option>
                                    <option value="CheckedIn" selected="@(b.Status == "CheckedIn")">🏨 Đã nhận phòng</option>
                                    <option value="Completed" selected="@(b.Status == "Completed")">✓ Hoàn thành</option>
                                    <option value="Cancelled" selected="@(b.Status == "Cancelled")">❌ Đã hủy</option>
                                </select>
                                <button type="submit" class="btn btn-primary btn-lg btn-rounded shadow">
                                    Lưu
                                </button>
                            </form>
                        }
                        else
                        {
                            <small class="text-muted d-block mt-3">Chỉ xem (không có quyền thay đổi trạng thái)</small>
                        }
                    </div>
                </div>
            }
        </div>
    }
</div>