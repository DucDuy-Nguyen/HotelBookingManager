@model HotelBookingManager.BusinessObjects.DTO.PaymentDto
@{
    ViewData["Title"] = "Chi tiết thanh toán";
}

<!-- Google Fonts & Icons -->
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600;700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    :root {
        --primary: #0d6efd;
        --success: #198754;
        --warning: #ffc107;
        --danger: #dc3545;
        --dark: #1a1a1a;
        --gray: #6c757d;
        --light: #f8f9fa;
    }

    body {
        font-family: 'Inter', sans-serif;
    }

    h2 {
        font-family: 'Playfair Display', serif;
        font-weight: 700;
    }

    .hero-bg {
        background: linear-gradient(rgba(0,0,0,0.55), rgba(0,0,0,0.45)), url('https://images.unsplash.com/photo-1566073771259-6a8506099945?q=80&w=2070&auto=format&fit=crop') center/cover;
        height: 340px;
        border-radius: 0 0 32px 32px;
        position: relative;
    }

    .detail-card {
        border: none;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0,0,0,0.12);
    }

    .info-item {
        background: var(--light);
        padding: 1.2rem;
        border-radius: 16px;
        margin-bottom: 1rem;
        transition: transform 0.3s ease;
    }

        .info-item:hover {
            transform: translateY(-3px);
        }

    .status-icon {
        font-size: 4.5rem;
        margin-bottom: 1rem;
    }

    .badge-status {
        padding: 0.6rem 1.2rem;
        border-radius: 50px;
        font-weight: 600;
        font-size: 1rem;
    }

    .btn-rounded {
        border-radius: 50px;
        padding: 0.8rem 2rem;
        font-weight: 600;
        font-size: 1.1rem;
        transition: all 0.3s ease;
    }

        .btn-rounded:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.2);
        }
</style>

<!-- HERO HEADER -->
<div class="hero-bg position-relative mb-5">
    <div class="container h-100 d-flex flex-column justify-content-center text-white text-center px-4">
        <h1 class="display-4 fw-bold mb-2">Chi tiết thanh toán</h1>
        <p class="lead opacity-75 mb-0">Thông tin giao dịch đầy đủ</p>
    </div>
</div>

<!-- DETAIL CARD -->
<div class="container mb-5" style="margin-top: -140px; position: relative; z-index: 10;">
    <div class="detail-card mx-auto rounded-4 shadow-xl overflow-hidden"
         style="max-width: 900px; background: white;">
        <div class="card-body p-5 p-md-5">

            <!-- STATUS ICON & TITLE -->
            <div class="text-center mb-5">
                @if (Model.Status == "Paid" || Model.Status == "Success")
                {
                    <i class="bi bi-check-circle-fill text-success status-icon"></i>
                    <h2 class="fw-bold text-success mb-3">ĐÃ THANH TOÁN</h2>
                }
                else if (Model.Status == "Pending")
                {
                    <i class="bi bi-hourglass-split text-warning status-icon"></i>
                    <h2 class="fw-bold text-warning mb-3">CHỜ THANH TOÁN</h2>
                }
                else if (Model.Status == "Failed")
                {
                    <i class="bi bi-x-circle-fill text-danger status-icon"></i>
                    <h2 class="fw-bold text-danger mb-3">THẤT BẠI</h2>
                }
                else
                {
                    <i class="bi bi-question-circle-fill text-gray status-icon"></i>
                    <h2 class="fw-bold text-gray mb-3">@Model.Status</h2>
                }
            </div>

            <!-- PAYMENT DETAILS -->
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="info-item">
                        <small class="text-muted d-block">Số tiền</small>
                        <h4 class="fw-bold text-success mb-0">@Model.Amount.ToString("N0") VNĐ</h4>
                    </div>

                    <div class="info-item">
                        <small class="text-muted d-block">Phương thức</small>
                        <h5 class="fw-semibold mb-0">
                            @(Model.Method == "Cash" ? "Tiền mặt" : Model.Method == "VNPAY" ? "VNPay" : Model.Method)
                        </h5>
                    </div>

                    <div class="info-item">
                        <small class="text-muted d-block">Mã giao dịch</small>
                        <h5 class="fw-semibold mb-0">@(Model.TransactionCode ?? "—")</h5>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="info-item">
                        <small class="text-muted d-block">Trạng thái</small>
                        <h5 class="fw-semibold mb-0">
                            <span class="badge-status @(Model.Status == "Paid" || Model.Status == "Success" ? "bg-success" : Model.Status == "Pending" ? "bg-warning text-dark" : Model.Status == "Failed" ? "bg-danger" : "bg-secondary")">
                                @(Model.Status == "Paid" || Model.Status == "Success" ? "Đã thanh toán" : Model.Status == "Pending" ? "Chờ thanh toán" : Model.Status == "Failed" ? "Thất bại" : Model.Status)
                            </span>
                        </h5>
                    </div>

                    <div class="info-item">
                        <small class="text-muted d-block">Thời điểm thanh toán</small>
                        <h5 class="fw-semibold mb-0">
                            @(Model.PaidAt.HasValue? Model.PaidAt.Value.ToString("dd/MM/yyyy HH:mm") : "Chưa thanh toán")
                        </h5>
                    </div>

                    <div class="info-item">
                        <small class="text-muted d-block">Ngày tạo</small>
                        <h5 class="fw-semibold mb-0">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</h5>
                    </div>

                    <div class="info-item">
                        <small class="text-muted d-block">Mã booking</small>
                        <h5 class="fw-semibold mb-0">#@Model.BookingId</h5>
                    </div>

                    <div class="info-item">
                        <small class="text-muted d-block">Khách hàng (UserId)</small>
                        <h5 class="fw-semibold mb-0">@Model.UserId</h5>
                    </div>
                </div>
            </div>

            <!-- ACTION BUTTONS -->
            <div class="mt-5 pt-4 d-flex flex-column flex-md-row justify-content-center gap-4">
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg btn-rounded shadow">
                    <i class="bi bi-arrow-left me-1"></i> Quay lại danh sách
                </a>

                @if (Model.Status == "Pending")
                {
                    <a asp-action="Pay" asp-route-paymentId="@Model.PaymentId"
                       class="btn btn-success btn-lg btn-rounded shadow">
                        <i class="bi bi-currency-dollar me-1"></i> Thanh toán ngay
                    </a>
                }
            </div>

        </div>
    </div>
</div>