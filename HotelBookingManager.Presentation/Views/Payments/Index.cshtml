@model IEnumerable<HotelBookingManager.BusinessObjects.DTO.PaymentDto>
@using System.Security.Claims

@{
    ViewData["Title"] = "Danh sách thanh toán";

    var roleClaim = User.FindFirstValue(ClaimTypes.Role);
    var roleId = string.IsNullOrEmpty(roleClaim) ? 3 : int.Parse(roleClaim);
    var isAdminOrStaff = roleId == 1 || roleId == 2;
}

<h2 class="mb-3">💳 Danh sách thanh toán</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">Chưa có giao dịch thanh toán nào.</div>
}
else
{
    <div class="table-responsive shadow-sm">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-dark text-center">
                <tr>
                    <th>Mã giao dịch</th>
                    <th>Số tiền</th>
                    <th>Phương thức</th>
                    <th>Trạng thái</th>
                    <th>Phòng</th>
                    <th>Khách hàng</th>
                    <th width="180">Thao tác</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@(item.TransactionCode ?? "—")</td>

                        <td class="text-end">
                            @item.Amount.ToString("N0") VNĐ
                        </td>

                        <td class="text-center">
                            <span class="badge bg-primary">
                                @(item.Method == "Cash" ? "Tiền mặt"
                                                        : item.Method == "VNPAY" ? "VNPay"
                                                        : item.Method)
                            </span>
                        </td>

                        <td class="text-center">
                            @{
                                var status = item.Status;
                                var badgeClass = "bg-secondary";
                                var statusText = status;

                                if (status == "Paid" || status == "Success")
                                {
                                    badgeClass = "bg-success";
                                    statusText = "Đã thanh toán";
                                }
                                else if (status == "Pending")
                                {
                                    badgeClass = "bg-warning text-dark";
                                    statusText = "Chờ thanh toán";
                                }
                                else if (status == "Failed")
                                {
                                    badgeClass = "bg-danger";
                                    statusText = "Thất bại";
                                }
                            }

                            <span class="badge @badgeClass">
                                @statusText
                            </span>
                        </td>

                        <td>@(item.RoomNumber ?? "N/A")</td>
                        <td>@(item.CustomerName ?? "N/A")</td>

                        <td class="text-center">
                            <div class="btn-group btn-group-sm">
                                <a asp-action="Details"
                                   asp-route-id="@item.PaymentId"
                                   class="btn btn-info">
                                    Chi tiết
                                </a>

                                @if (isAdminOrStaff
                                                        && item.Method == "Cash"
                                                        && item.Status == "Pending")
                                {
                                    <a asp-action="Pay"
                                       asp-route-paymentId="@item.PaymentId"
                                       class="btn btn-success">
                                        Thu tiền
                                    </a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
