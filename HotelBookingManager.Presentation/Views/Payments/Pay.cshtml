@model HotelBookingManager.DataAccess.Models.Payment
@{
    ViewData["Title"] = "Thanh toán";
}

<!-- Google Fonts & Icons -->
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600;700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    :root {
        --primary: #0d6efd;
        --success: #198754;
        --warning: #ffc107;
        --danger: #dc3545;
        --dark: #1a1a1a;
        --gray: #6c757d;
        --light: #f8f9fa;
    }

    body {
        font-family: 'Inter', sans-serif;
    }

    h2 {
        font-family: 'Playfair Display', serif;
        font-weight: 700;
    }

    .hero-bg {
        background: linear-gradient(rgba(0,0,0,0.55), rgba(0,0,0,0.45)), url('https://images.unsplash.com/photo-1566073771259-6a8506099945?q=80&w=2070&auto=format&fit=crop') center/cover;
        height: 340px;
        border-radius: 0 0 32px 32px;
        position: relative;
    }

    .payment-card {
        border: none;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0,0,0,0.12);
    }

    .form-label {
        font-weight: 600;
        color: var(--dark);
    }

    .form-control, .form-select {
        border-radius: 12px;
        padding: 0.75rem 1rem;
    }

        .form-control:focus, .form-select:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 0.25rem rgba(13,110,253,0.25);
        }

    .btn-rounded {
        border-radius: 50px;
        padding: 0.8rem 2rem;
        font-weight: 600;
        font-size: 1.1rem;
        transition: all 0.3s ease;
    }

        .btn-rounded:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(13,110,253,0.3);
        }

    .info-badge {
        background: var(--light);
        color: var(--dark);
        padding: 0.6rem 1.2rem;
        border-radius: 50px;
        font-weight: 500;
        font-size: 1rem;
    }
</style>

<!-- HERO HEADER -->
<div class="hero-bg position-relative mb-5">
    <div class="container h-100 d-flex flex-column justify-content-center text-white px-4">
        <h1 class="display-4 fw-bold mb-2">Thanh toán</h1>
        <p class="lead opacity-75 mb-0">
            Xác nhận và hoàn tất giao dịch
        </p>
    </div>
</div>

<!-- PAYMENT CARD -->
<div class="container mb-5" style="margin-top: -120px; position: relative; z-index: 10;">
    <div class="payment-card mx-auto overflow-hidden rounded-4 shadow-xl"
         style="max-width: 900px; background: white;">
        <div class="card-body p-5 p-md-5">

            <div class="text-center mb-5">
                <i class="bi bi-credit-card fs-1 text-primary mb-3 d-block"></i>
                <h3 class="fw-bold mb-1">Xác nhận thanh toán</h3>
                <p class="text-muted">Booking # @Model.BookingId</p>
            </div>

            <div class="row justify-content-center mb-5">
                <div class="col-md-8">
                    <div class="d-flex justify-content-between align-items-center p-4 bg-light rounded-3 mb-4">
                        <div>
                            <small class="text-muted d-block">Số tiền cần thanh toán</small>
                            <h4 class="fw-bold text-success mb-0">@Model.Amount.ToString("N0") VNĐ</h4>
                        </div>
                        <span class="info-badge">
                            <i class="bi bi-calendar-event me-1"></i> Booking #@Model.BookingId
                        </span>
                    </div>

                    <form asp-action="Pay" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="paymentId" value="@Model.PaymentId" />

                        <div class="mb-4">
                            <label class="form-label fw-semibold">Phương thức thanh toán</label>
                            <select name="method" class="form-select form-select-lg rounded-pill shadow-sm">
                                <option value="Cash">Tiền mặt</option>
                                <option value="VNPAY">VNPAY</option>
                            </select>
                        </div>

                        <div class="d-flex flex-column flex-md-row gap-3 mt-5">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg btn-rounded flex-fill">
                                <i class="bi bi-arrow-left me-1"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg btn-rounded shadow flex-fill">
                                <i class="bi bi-check-circle me-1"></i> Xác nhận thanh toán
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>