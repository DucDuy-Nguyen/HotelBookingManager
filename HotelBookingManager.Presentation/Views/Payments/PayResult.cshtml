@model HotelBookingManager.BusinessObjects.DTO.PaymentDto

@{
    ViewData["Title"] = "Kết quả thanh toán";
    bool isPaid = Model.Status == "Paid";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <!-- ===== HEADER STATUS ===== -->
            @if (isPaid)
            {
                <div class="alert alert-success text-center">
                    <h2>
                        <i class="fas fa-check-circle"></i>
                        THANH TOÁN THÀNH CÔNG
                    </h2>
                </div>
            }
            else
            {
                <div class="alert alert-danger text-center">
                    <h2>
                        <i class="fas fa-times-circle"></i>
                        THANH TOÁN THẤT BẠI
                    </h2>
                </div>
            }

            <!-- ===== PAYMENT DETAIL ===== -->
            <div class="card shadow">
                <div class="card-header bg-light">
                    <h5>
                        Chi tiết giao dịch
                        <strong>@Model.TransactionCode</strong>
                    </h5>
                </div>

                <div class="card-body">
                    <div class="row">
                        <!-- LEFT -->
                        <div class="col-md-6">
                            <p><strong>Phương thức:</strong> @Model.Method</p>
                            <p><strong>Số tiền:</strong> @Model.Amount.ToString("N0") VNĐ</p>
                            <p><strong>Mã đơn hàng:</strong> @Model.BookingId</p>
                        </div>

                        <!-- RIGHT -->
                        <div class="col-md-6">
                            <p>
                                <strong>Trạng thái:</strong>
                                <span class="badge @(isPaid ? "bg-success" : "bg-danger")">
                                    @Model.Status
                                </span>
                            </p>

                            <p>
                                <strong>Thời gian:</strong>
                                @(Model.PaidAt.HasValue
                                                                ? Model.PaidAt.Value.ToString("dd/MM/yyyy HH:mm")
                                                                : "Chưa thanh toán")
                            </p>

                            <p>
                                <strong>Phòng:</strong>
                                @(string.IsNullOrEmpty(Model.RoomNumber)
                                                                ? "N/A"
                                                                : Model.RoomNumber)
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ===== FOOTER ACTION ===== -->
            <div class="text-center mt-4">
                @if (isPaid)
                {
                    <a asp-controller="Bookings"
                       asp-action="Index"
                       class="btn btn-primary">
                        Quay lại danh sách
                    </a>
                }
                else if (Model.Method == "Cash")
                {
                    <h4 class="text-warning mb-3">
                        ⏳ CHỜ THU TIỀN MẶT
                    </h4>

                    <a asp-controller="Bookings"
                       asp-action="Index"
                       class="btn btn-primary">
                        Quay lại danh sách
                    </a>
                }
                else
                {
                    <a asp-controller="Payments"
                       asp-action="Pay"
                       asp-route-bookingId="@Model.BookingId"
                       class="btn btn-danger">
                        Thử thanh toán lại
                    </a>
                }
            </div>

        </div>
    </div>
</div>
