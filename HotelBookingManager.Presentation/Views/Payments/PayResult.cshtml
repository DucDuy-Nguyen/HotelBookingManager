@model HotelBookingManager.BusinessObjects.DTO.PaymentDto
@{
    ViewData["Title"] = "Kết quả thanh toán";
    bool isPaid = Model.Status == "Paid";
}

<!-- Google Fonts & Icons -->
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600;700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    :root {
        --primary: #0d6efd;
        --success: #198754;
        --warning: #ffc107;
        --danger: #dc3545;
        --dark: #1a1a1a;
        --gray: #6c757d;
        --light: #f8f9fa;
    }

    body {
        font-family: 'Inter', sans-serif;
    }

    h2, h1 {
        font-family: 'Playfair Display', serif;
    }

    .hero-bg {
        background: linear-gradient(rgba(0,0,0,0.65), rgba(0,0,0,0.65));
        height: 340px;
        border-radius: 0 0 32px 32px;
        position: relative;
    }

    .result-card {
        border: none;
        border-radius: 24px;
        overflow: hidden;
        box-shadow: 0 12px 40px rgba(0,0,0,0.15);
    }

    .status-icon {
        font-size: 5rem;
        margin-bottom: 1.5rem;
    }

    .btn-rounded {
        border-radius: 50px;
        padding: 0.8rem 2rem;
        font-weight: 600;
        font-size: 1.1rem;
        transition: all 0.3s ease;
    }

        .btn-rounded:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.2);
        }

    .info-item {
        background: var(--light);
        padding: 1.2rem;
        border-radius: 16px;
        margin-bottom: 1rem;
        transition: transform 0.3s ease;
    }

        .info-item:hover {
            transform: translateY(-3px);
        }

    .badge-status {
        padding: 0.6rem 1.2rem;
        border-radius: 50px;
        font-weight: 600;
        font-size: 1rem;
    }
</style>

<!-- HERO HEADER -->
<div class="hero-bg position-relative mb-5">
    <div class="container h-100 d-flex flex-column justify-content-center text-white text-center px-4">
        <h1 class="display-4 fw-bold mb-2">Kết quả thanh toán</h1>
        <p class="lead opacity-75 mb-0">Thông tin giao dịch của bạn</p>
    </div>
</div>

<!-- RESULT CARD -->
<div class="container mb-5" style="margin-top: -140px; position: relative; z-index: 10;">
    <div class="result-card mx-auto rounded-4 shadow-xl overflow-hidden"
         style="max-width: 900px; background: white;">
        <div class="card-body p-5 p-md-5 text-center">

            <!-- STATUS ICON & TITLE -->
            @if (isPaid)
            {
                <div class="mb-5">
                    <i class="bi bi-check-circle-fill text-success status-icon"></i>
                    <h2 class="fw-bold text-success mb-3">THANH TOÁN THÀNH CÔNG</h2>
                    <p class="text-muted lead">Cảm ơn bạn đã thanh toán!</p>
                </div>
            }
            else
            {
                <div class="mb-5">
                    <i class="bi bi-x-circle-fill text-danger status-icon"></i>
                    <h2 class="fw-bold text-danger mb-3">THANH TOÁN THẤT BẠI</h2>
                    <p class="text-muted lead">Vui lòng thử lại hoặc liên hệ hỗ trợ.</p>
                </div>
            }

            <!-- PAYMENT DETAILS -->
            <div class="row g-4 justify-content-center">
                <div class="col-md-8">
                    <div class="info-item">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <small class="text-muted d-block">Mã giao dịch</small>
                                <strong class="fs-5">@(Model.TransactionCode ?? "—")</strong>
                            </div>
                            <span class="badge-status @(isPaid ? "bg-success" : "bg-danger")">
                                @Model.Status
                            </span>
                        </div>
                    </div>

                    <div class="info-item">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <small class="text-muted d-block">Số tiền</small>
                                <strong class="fs-5 text-success">@Model.Amount.ToString("N0") VNĐ</strong>
                            </div>
                            <span class="badge bg-primary">@Model.Method</span>
                        </div>
                    </div>

                    <div class="info-item">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <small class="text-muted d-block">Mã booking</small>
                                <strong class="fs-5">#@Model.BookingId</strong>
                            </div>
                            <div>
                                <small class="text-muted d-block">Phòng</small>
                                <strong>@(string.IsNullOrEmpty(Model.RoomNumber) ? "N/A" : Model.RoomNumber)</strong>
                            </div>
                        </div>
                    </div>

                    <div class="info-item">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <small class="text-muted d-block">Thời gian</small>
                                <strong class="fs-5">
                                    @(Model.PaidAt.HasValue? Model.PaidAt.Value.ToString("dd/MM/yyyy HH:mm") : "Chưa thanh toán")
                                </strong>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ACTION BUTTONS -->
            <div class="mt-5 pt-4 d-flex flex-column flex-md-row justify-content-center gap-4">
                @if (isPaid)
                {
                    <a asp-controller="Bookings" asp-action="Index"
                       class="btn btn-primary btn-lg btn-rounded shadow">
                        <i class="bi bi-arrow-left me-1"></i> Quay lại danh sách booking
                    </a>
                }
                else if (Model.Method == "Cash")
                {
                    <div class="text-center">
                        <h4 class="text-warning mb-3 fw-bold">
                            <i class="bi bi-hourglass-split me-1"></i> CHỜ THU TIỀN MẶT
                        </h4>
                        <a asp-controller="Bookings" asp-action="Index"
                           class="btn btn-primary btn-lg btn-rounded shadow">
                            <i class="bi bi-arrow-left me-1"></i> Quay lại danh sách
                        </a>
                    </div>
                }
                else
                {
                    <a asp-controller="Payments" asp-action="Pay" asp-route-bookingId="@Model.BookingId"
                       class="btn btn-danger btn-lg btn-rounded shadow">
                        <i class="bi bi-arrow-repeat me-1"></i> Thử thanh toán lại
                    </a>
                    <a asp-controller="Bookings" asp-action="Index"
                       class="btn btn-outline-secondary btn-lg btn-rounded shadow">
                        <i class="bi bi-arrow-left me-1"></i> Quay lại danh sách
                    </a>
                }
            </div>

        </div>
    </div>
</div>