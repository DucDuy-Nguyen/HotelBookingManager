@model HotelBookingManager.BusinessObjects.DTO.PaymentDto

@{
    ViewData["Title"] = "Kết quả thanh toán";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            @if (Model.Status == "Success")
            {
                <div class="alert alert-success text-center">
                    <h2><i class="fas fa-check-circle"></i> THANH TOÁN THÀNH CÔNG!</h2>
                </div>
            }
            else
            {
                <div class="alert alert-danger text-center">
                    <h2><i class="fas fa-times-circle"></i> THANH TOÁN THẤT BẠI</h2>
                </div>
            }

            <div class="card shadow">
                <div class="card-header bg-light">
                    <h5>Chi tiết giao dịch <strong>@Model.TransactionCode</strong></h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Phương thức:</strong> @Model.Method</p>
                            <p><strong>Số tiền:</strong> @Model.Amount.ToString("N0") VNĐ</p>
                            <p><strong>Mã đơn hàng:</strong> @Model.BookingId</p>
                        </div>
                        <div class="col-md-6">
                            <p>
                                <strong>Trạng thái:</strong>
                                <span class="badge @(Model.Status == "Success" ? "bg-success" : "bg-danger")">
                                    @Model.Status
                                </span>
                            </p>
                            <p><strong>Thời gian:</strong> @Model.PaidAt?.ToString("dd/MM/yyyy HH:mm")</p>
                            <p><strong>Phòng:</strong> @(Model.RoomNumber ?? "N/A")</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-center mt-4">
                @if (Model.Status == "Success")
                {
                    <a asp-controller="Bookings"
                       asp-action="Index"
                       asp-route-status="All"
                       class="btn btn-primary">
                        Quay lại danh sách
                    </a>
                }
                else
                {
                    @if (Model.Method == "Cash")
                    {
                        <h2 class="text-warning">CHỜ THU TIỀN MẶT</h2>
                    }
                    else if (Model.Status == "Success")
                    {
                        <h2 class="text-success">THANH TOÁN THÀNH CÔNG</h2>
                    }
                    else
                    {
                        <h2 class="text-danger">THANH TOÁN THẤT BẠI</h2>
                    }

                    <a asp-controller="Bookings"
                       asp-action="Index"
                       asp-route-status="All"
                       class="btn btn-primary">
                        Quay lại danh sách
                    </a>
                }
            </div>
        </div>
    </div>
</div>
