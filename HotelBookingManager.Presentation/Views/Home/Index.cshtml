@using Microsoft.VisualStudio.Web.CodeGenerators.Mvc.Templates.Blazor
@model IEnumerable<HotelBookingManager.BusinessObjects.DTO.HotelDto>
@{
    ViewData["Title"] = "Trang chủ";
}

<!-- HERO SECTION -->
<section class="py-5 position-relative text-white"
         style="
            min-height: 75vh;
            background:
                linear-gradient(rgba(0,0,0,0.55), rgba(0,0,0,0.55)),
                url('https://images.unsplash.com/photo-1566073771259-6a8506099945?auto=format&fit=crop&w=1600&q=80');
            background-size: cover;
            background-position: center;
         ">
    <div class="container h-100">
        <div class="row align-items-center h-100 gy-4">
            <div class="container">
                <div class="row align-items-center gy-5 text-white">

                    <!-- Search form -->
                    <div class="row mt-3 justify-content-center">
                        <div class="col-md-10">
                            <form asp-controller="Hotels" asp-action="Index" method="get"
                                  class="row g-3 bg-white p-4 rounded-4 shadow-lg">
                                <div class="col-md-4">
                                    <input type="text"
                                           name="city"
                                           class="form-control form-control-lg rounded-3"
                                           placeholder="Nhập TP Hồ Chí Minh, Hà Nội..."
                                           value="@ViewBag.SearchCity" />
                                </div>
                                <div class="col-md-3">
                                    <select name="statusFilter"
                                            class="form-select form-select-lg rounded-3">
                                        <option value="active" selected>Đang hoạt động</option>
                                        <option value="inactive">Ngưng hoạt động</option>
                                    </select>
                                </div>
                                <div class="col-md-5">
                                    <button type="submit"
                                            class="btn btn-primary btn-lg w-100 fw-semibold rounded-3">
                                        🔍 Tìm khách sạn
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Hero text -->
                    <div class="col-lg-6">
                        <span class="badge bg-primary mb-3 px-3 py-2">
                            Nền tảng đặt phòng trực tuyến
                        </span>

                        <h1 class="display-4 fw-bold mb-3">
                            Đặt phòng khách sạn <br /> nhanh chóng & tiện lợi
                        </h1>

                        <p class="lead text-light opacity-75 mb-4">
                            Tìm kiếm, so sánh và đặt phòng khách sạn phù hợp cho chuyến đi của bạn.
                            Xác nhận tức thì – quản lý hoàn toàn online.
                        </p>

                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <div class="mb-3">
                                👋 Xin chào
                                <strong>@User.Identity.Name</strong>
                                <span class="opacity-75">
                                    (@User.FindFirst("http://schemas.microsoft.com/ws/2008/06/identity/claims/role")?.Value)
                                </span>
                            </div>

                            <div class="d-flex flex-wrap gap-2">
                                <a asp-controller="Hotels"
                                   asp-action="Index"
                                   class="btn btn-primary btn-lg">
                                    🔍 Khám phá
                                </a>
                                <a asp-controller="Rooms"
                                   asp-action="Recommendations"
                                   class="btn btn-warning btn-lg fw-semibold">
                                    🤖 Gợi ý phòng AI
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="d-flex flex-wrap gap-2">
                                <a asp-controller="Account"
                                   asp-action="Register"
                                   class="btn btn-primary btn-lg px-4">
                                    🚀 Bắt đầu đặt phòng
                                </a>
                                <a asp-controller="Rooms"
                                   asp-action="Recommendations"
                                   class="btn btn-warning btn-lg fw-semibold">
                                    🤖 Gợi ý phòng AI
                                </a>
                            </div>
                        }
                    </div>

                    <!-- Features -->
                    <div class="col-lg-6">
                        <div class="row g-3">
                            <div class="col-12">
                                <div class="card border-0 shadow-lg">
                                    <div class="card-body">
                                        <h5 class="card-title fw-bold mb-2">
                                            Vì sao chọn Hotel Booking?
                                        </h5>
                                        <p class="card-text text-muted mb-0">
                                            Giải pháp đặt phòng toàn diện – nhanh – đơn giản – minh bạch,
                                            phù hợp cho du lịch, công tác và nghỉ dưỡng.
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="card h-100 border-0 shadow-sm">
                                    <div class="card-body">
                                        <h6 class="fw-bold text-primary mb-2">
                                            🛏️ Đa dạng loại phòng
                                        </h6>
                                        <p class="text-muted mb-0">
                                            Nhiều phân khúc từ tiêu chuẩn đến cao cấp,
                                            phù hợp mọi ngân sách và nhu cầu.
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="card h-100 border-0 shadow-sm">
                                    <div class="card-body">
                                        <h6 class="fw-bold text-primary mb-2">
                                            ⏰ Đặt phòng linh hoạt
                                        </h6>
                                        <p class="text-muted mb-0">
                                            Đặt phòng 24/7, kiểm tra tình trạng theo ngày
                                            và quản lý booking dễ dàng.
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- FEATURED HOTELS -->
@if (Model != null && Model.Any())
{
    <section class="py-5 bg-light">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="h4 fw-bold mb-0">
                    ⭐ Khách sạn nổi bật
                </h2>
                <a asp-controller="Hotels" asp-action="Index" class="btn btn-outline-primary btn-sm">
                    Xem tất cả
                </a>
            </div>

            <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
                @foreach (var h in Model)
                {
                    <div class="col">
                        <div class="card h-100 border-0 shadow-sm hotel-card transition-all">
                            @if (!string.IsNullOrEmpty(h.ImageUrl))
                            {
                                <div class="position-relative overflow-hidden rounded-top">
                                    <img src="@h.ImageUrl"
                                         alt="@h.Name"
                                         class="card-img-top w-100"
                                         style="height: 200px; object-fit: cover;" />
                                    @if (h.IsActive)
                                    {
                                        <span class="position-absolute top-2 end-2 badge bg-success rounded-pill px-2 py-1">
                                            🟢 Đang mở
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="position-absolute top-2 end-2 badge bg-secondary rounded-pill px-2 py-1">
                                            🔒 Đóng cửa
                                        </span>
                                    }
                                </div>
                            }

                            <div class="card-body d-flex flex-column p-3">
                                <h6 class="card-title fw-semibold mb-2" style="height: 44px; overflow: hidden;">
                                    @h.Name
                                </h6>

                                <p class="text-muted small mb-2" style="height: 40px; overflow: hidden;">
                                    📍 @h.Address, @h.City
                                </p>

                                <div class="mb-3">
                                    <div class="d-flex align-items-center mb-1">
                                        <span class="badge bg-warning text-dark fs-6 me-2">
                                            ⭐ @h.Rating
                                        </span>
                                    </div>
                                </div>

                                <div class="mt-auto">
                                    <div class="d-grid gap-2">
                                        <a asp-controller="Hotels"
                                           asp-action="Details"
                                           asp-route-id="@h.HotelId"
                                           class="btn btn-outline-primary btn-sm fw-semibold">
                                            👁️ Chi tiết
                                        </a>
                                        <a asp-controller="Rooms"
                                           asp-action="ByHotel"
                                           asp-route-hotelId="@h.HotelId"
                                           asp-route-onlyAvailable="true"
                                           class="btn btn-primary btn-sm fw-semibold">
                                            🛏️ Xem phòng
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}
<!-- AI WIDGET - VERSION FIX LỖI TỰ TẮT -->
<div id="ai-widget" class="ai-widget">
    <button class="ai-toggle-btn" data-bs-toggle="modal" data-bs-target="#aiModal" title="Gợi ý phòng AI">
        <span class="ai-icon">🤖</span>
        <span class="ai-text">AI Gợi ý</span>
    </button>
</div>

<!-- MODAL KHÔNG TỰ ĐÓNG -->
<div class="modal fade" id="aiModal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content rounded-4 border-0 shadow-lg" style="border-radius: 20px;">
            <div class="modal-header border-0 pb-3" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                <h5 class="modal-title fw-bold mb-0">🤖 Trợ Lý Đề Xuất Hotel & Phòng</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" id="ai-close-btn"></button>
            </div>

            <div class="modal-body p-4">
                <!-- FORM INPUT -->
                <form id="ai-recommendation-form">
                    <div class="mb-4">
                        <label class="form-label fw-bold fs-6 mb-2">📝 Mô Tả Yêu Cầu</label>
                        <textarea id="ai-preferences" class="form-control form-control-lg" rows="4"
                                  placeholder="Ví dụ: Khách sạn 5 sao TPHCM, view sông, dưới 3tr/đêm..."
                                  required style="border-radius: 10px; border: 2px solid #e0e0e0; resize: vertical;">
                        </textarea>
                    </div>

                    <!-- SUBMIT BUTTON ✅ KHÔNG CÓ type="submit" để tránh submit form mặc định -->
                    <button type="button" id="ai-submit-btn" class="btn btn-primary btn-lg w-100 fw-bold py-3 mb-4"
                            style="border-radius: 10px; font-size: 1.1rem;">
                        <span class="btn-text"><i class="fas fa-wand-magic-sparkles"></i> Tìm Giải Pháp Tốt Nhất</span>
                        <span class="btn-loading d-none">
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                            Đang tìm kiếm...
                        </span>
                    </button>
                </form>

                <!-- LOADING -->
                <div id="ai-loading" class="text-center py-5 d-none">
                    <div class="spinner-border text-primary mb-3" style="width: 3rem; height: 3rem;"></div>
                    <p class="text-muted fs-6">⏳ AI đang phân tích yêu cầu...</p>
                </div>

                <!-- RESULTS -->
                <div id="ai-results" class="d-none">
                    <div class="alert alert-success border-0 p-4 mb-4" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                        <h6 class="alert-heading fw-bold mb-0">✨ Đề Xuất Từ AI</h6>
                    </div>
                    <div id="ai-content"></div>
                </div>

                <!-- ERROR -->
                <div id="ai-error" class="alert alert-danger border-0 d-none" style="border-radius: 10px;">
                    <strong>❌ Lỗi:</strong> <span id="ai-error-text"></span>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .ai-widget {
        position: fixed;
        bottom: 30px;
        right: 30px;
        z-index: 9999;
    }

    .ai-toggle-btn {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        border-radius: 50px;
        padding: 12px 20px;
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 8px;
        font-weight: 600;
        transition: all 0.3s ease;
        min-width: 160px;
        justify-content: center;
    }

        .ai-toggle-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 35px rgba(102, 126, 234, 0.6);
        }

    @@media (max-width: 768px) {
        .ai-widget {
            bottom: 20px !important;
            right: 20px !important;
        }

        .ai-toggle-btn {
            min-width: 140px !important;
            padding: 10px 16px !important;
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const modal = new bootstrap.Modal(document.getElementById('aiModal'), {
            backdrop: 'static',
            keyboard: false
        });

        const submitBtn = document.getElementById('ai-submit-btn');
        const preferences = document.getElementById('ai-preferences');
        const form = document.getElementById('ai-recommendation-form');

        // ✅ EVENT LISTENER CHO BUTTON CLICK - KHÔNG DÙNG SUBMIT
        submitBtn.addEventListener('click', async function(e) {
            e.preventDefault(); // NGAN CHẶN MỌI HÀNH ĐỘNG MẶC ĐỊNH
            e.stopPropagation(); // NGAN PROPAGATION

            const text = preferences.value.trim();
            if (!text) {
                alert('Vui lòng nhập yêu cầu!');
                return;
            }

            // UI Loading
            submitBtn.disabled = true;
            submitBtn.querySelector('.btn-text').classList.add('d-none');
            submitBtn.querySelector('.btn-loading').classList.remove('d-none');

            document.getElementById('ai-loading').classList.remove('d-none');
            document.getElementById('ai-results').classList.add('d-none');
            document.getElementById('ai-error').classList.add('d-none');

            try {
                // GỌI API CỦA BẠN
                const response = await fetch('/api/recommendation/get-suggestions', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ preferences: text })
                });

                // ẨN LOADING
                document.getElementById('ai-loading').classList.add('d-none');

                if (!response.ok) {
                    const error = await response.json();
                    throw new Error(error.message || 'Lỗi server');
                }

                const data = await response.json();

                if (data.success) {
                    document.getElementById('ai-content').innerHTML = data.recommendations;
                    document.getElementById('ai-results').classList.remove('d-none');
                } else {
                    throw new Error(data.message);
                }
            } catch (error) {
                document.getElementById('ai-loading').classList.add('d-none');
                document.getElementById('ai-error-text').textContent = error.message;
                document.getElementById('ai-error').classList.remove('d-none');
            } finally {
                // RESET BUTTON
                submitBtn.disabled = false;
                submitBtn.querySelector('.btn-text').classList.remove('d-none');
                submitBtn.querySelector('.btn-loading').classList.add('d-none');
            }
        });

        // NGĂN FORM SUBMIT MẶC ĐỊNH
        form.addEventListener('submit', function(e) {
            e.preventDefault();
            e.stopPropagation();
        });

        // RESET FORM KHI MỞ MODAL
        document.getElementById('aiModal').addEventListener('shown.bs.modal', function() {
            preferences.value = '';
            document.getElementById('ai-results').classList.add('d-none');
            document.getElementById('ai-error').classList.add('d-none');
            submitBtn.disabled = false;
            submitBtn.querySelector('.btn-text').classList.remove('d-none');
            submitBtn.querySelector('.btn-loading').classList.add('d-none');
        });
    });
</script>

