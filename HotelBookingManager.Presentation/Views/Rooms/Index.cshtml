@model IEnumerable<HotelBookingManager.BusinessObjects.DTO.RoomDto>
@using System.Security.Claims

@{
    var currentStatus = (ViewBag.Status as string) ?? "active";
    var roleClaim = User.FindFirst("RoleId")?.Value;
    var isAdminOrStaff = int.TryParse(roleClaim, out int roleId) && (roleId == 1 || roleId == 2);
}

<h2>🛠️ Quản lý phòng (Quản trị / Nhân viên)</h2>

<div class="d-flex justify-content-between mb-3">
    <a asp-action="Create" class="btn btn-success">
        <i class="fas fa-plus me-1"></i> Thêm phòng mới
    </a>
    <form asp-action="Index" method="get" class="d-inline">
        <label class="form-label me-2 mb-0 d-none d-md-inline">
            Lọc theo trạng thái:
        </label>
        <select name="status" class="form-select form-select-sm" onchange="this.form.submit()">
            <option value="active" selected="@(currentStatus == "active")">
                Đang hoạt động
            </option>
            <option value="inactive" selected="@(currentStatus == "inactive")">
                Ngừng hoạt động
            </option>
            <option value="all" selected="@(currentStatus == "all")">
                Tất cả
            </option>
        </select>
    </form>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center py-5">
        <i class="fas fa-building fs-1 mb-3 opacity-75"></i>
        <h4>Chưa có phòng nào trong hệ thống</h4>
        <a asp-action="Create" class="btn btn-primary mt-2">
            ➕ Thêm phòng đầu tiên
        </a>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle">
            <thead class="table-dark text-center">
                <tr>
                    <th style="width: 8%;">Khách sạn</th>
                    <th style="width: 10%;">Số phòng</th>
                    <th style="width: 8%;">Tầng</th>
                    <th style="width: 10%;">Loại phòng</th>
                    <th style="width: 12%;">Giá phòng</th>
                    <th style="width: 12%;">Tình trạng phòng</th>
                    <th style="width: 8%;">Kích hoạt</th>
                    <th style="width: 32%;">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var r in Model)
                {
                    <tr class="@(r.Status == "Available" ? "table-success" : "")">
                        <td class="text-center">
                            @if (!string.IsNullOrEmpty(r.HotelName))
                            {
                                <span class="badge bg-info">
                                    @r.HotelName
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">
                                    Hotel #@r.HotelId
                                </span>
                            }
                        </td>
                        <td>
                            <strong>@r.RoomNumber</strong>
                        </td>
                        <td class="text-center">
                            @r.Floor
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(r.RoomTypeName))
                            {
                                @r.RoomTypeName
                            }
                            else
                            {
                                @:Loại phòng #@r.RoomTypeId
                            }
                        </td>
                        <td>
                            <strong class="text-success">
                                @r.CurrentPrice.ToString("N0") VNĐ
                            </strong>
                        </td>
                        <td class="text-center">
                            @if (r.Status == "Available")
                            {
                                <span class="badge bg-success fs-6">
                                    Có sẵn
                                </span>
                            }
                            else if (r.Status == "Booked")
                            {
                                <span class="badge bg-warning text-dark fs-6">
                                    Đã được đặt
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary fs-6">
                                    @r.Status
                                </span>
                            }
                        </td>
                        <td class="text-center">
                            @if (r.IsActive)
                            {
                                <span class="badge bg-success fs-6">
                                    Hoạt động
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger fs-6">
                                    Ngừng
                                </span>
                            }
                        </td>
                        <!-- ✨ SỬA: Thêm text vào nút Edit và Delete -->
                        <td>
                            <div class="d-flex gap-2">
                                <a asp-action="Edit"
                                   asp-route-id="@r.RoomId"
                                   class="btn btn-warning btn-sm text-white"
                                   title="Chỉnh sửa phòng @r.RoomNumber">
                                    <i class="fas fa-edit"></i> Sửa
                                </a>
                                <a asp-action="Delete"
                                   asp-route-id="@r.RoomId"
                                   class="btn btn-danger btn-sm"
                                   title="Xóa phòng @r.RoomNumber"
                                   onclick="return confirm('Bạn có chắc chắn muốn xóa vĩnh viễn phòng @r.RoomNumber không?')">
                                    <i class="fas fa-trash"></i> Xóa
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@if (TempData["Success"] != null)
{
    <script>
        alert('@TempData["Success"]');
    </script>
}
