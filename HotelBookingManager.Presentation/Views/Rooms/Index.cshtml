@model IEnumerable<HotelBookingManager.BusinessObjects.DTO.RoomDto>

@{
    var currentStatus = (ViewBag.Status as string) ?? "active";
}

<h2>Quản lý phòng</h2>

<a asp-action="Create" class="btn btn-success mb-3">Thêm phòng</a>

<form asp-action="Index" method="get" class="mb-3">
    <label class="form-label me-2">Trạng thái</label>
    <select name="status"
            class="form-select d-inline-block w-auto"
            onchange="this.form.submit()">
        <option value="active" selected="@(currentStatus == "active")">Active</option>
        <option value="inactive" selected="@(currentStatus == "inactive")">Inactive</option>
        <option value="all" selected="@(currentStatus == "all")">Cả 2</option>
    </select>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>HotelId</th>
            <th>Số phòng</th>
            <th>Tầng</th>
            <th>Loại phòng</th>
            <th>Giá hiện tại</th>
            <th>Trạng thái</th>
            <th>Active</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.HotelId</td>
                <td>@r.RoomNumber</td>
                <td>@r.Floor</td>
                <td>@r.RoomTypeId</td>
                <td>@r.CurrentPrice.ToString("N0")</td>
                <td>@r.Status</td>
                <td>@r.IsActive</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@r.RoomId" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@r.RoomId" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
