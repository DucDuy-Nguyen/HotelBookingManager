@model IEnumerable<HotelBookingManager.DataAccess.Models.Room>

@{
    bool onlyAvailable = ViewBag.OnlyAvailable ?? true;
    int hotelId = ViewBag.HotelId;
}

<h2>Danh sách phòng (@(onlyAvailable ? "còn trống" : "tất cả"))</h2>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Số phòng</th>
            <th>Tầng</th>
            <th>Khách sạn</th>
            <th>Loại phòng</th>
            <th>Giá hiện tại</th>
            <th>Tối đa người lớn</th>
            <th>Tối đa trẻ em</th>
            <th>Trạng thái</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model)
        {
            <tr>
                <td>@room.RoomNumber</td>
                <td>@room.Floor</td>
                <td>@room.Hotel?.Name</td>
                <td>@room.RoomType?.Name</td>
                <td>@room.CurrentPrice.ToString("N0")</td>
                <td>@room.RoomType?.MaxAdults</td>
                <td>@room.RoomType?.MaxChildren</td>
                <td>@room.Status</td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-controller="Hotels" asp-action="Index" class="btn btn-secondary">
        Quay lại danh sách khách sạn
    </a>

    @if (onlyAvailable)
    {
        <a asp-action="ByHotel"
           asp-route-hotelId="@hotelId"
           asp-route-onlyAvailable="false"
           class="btn btn-outline-primary ms-2">
            Xem tất cả phòng
        </a>
    }
    else
    {
        <a asp-action="ByHotel"
           asp-route-hotelId="@hotelId"
           asp-route-onlyAvailable="true"
           class="btn btn-outline-primary ms-2">
            Chỉ phòng còn trống
        </a>
    }
</div>
