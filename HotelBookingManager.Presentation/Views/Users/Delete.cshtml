@model HotelBookingManager.Presentation.Models.UserManageViewModel

<h2>Xoá người dùng</h2>

<div class="alert alert-warning">
    Bạn có chắc chắn muốn xoá (khóa) người dùng sau?
</div>

<dl class="row">
    <dt class="col-sm-2">ID</dt>
    <dd class="col-sm-10">@Model.UserId</dd>

    <dt class="col-sm-2">Họ tên</dt>
    <dd class="col-sm-10">@Model.FullName</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <dt class="col-sm-2">Role</dt>
    <dd class="col-sm-10">@Model.RoleId</dd>

    <dt class="col-sm-2">HotelId</dt>
    <dd class="col-sm-10">@Model.HotelId</dd>
</dl>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="UserId" />

    <button type="submit" class="btn btn-danger">Xoá (khóa)</button>
    <a asp-action="Index" class="btn btn-secondary">Huỷ</a>
</form>
