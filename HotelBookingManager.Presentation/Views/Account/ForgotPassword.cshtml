@model HotelBookingManager.Presentation.Models.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Quên mật khẩu";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4 p-lg-5">
                    <h3 class="text-center mb-2 text-primary fw-semibold">
                        Quên mật khẩu
                    </h3>
                    <p class="text-center text-muted mb-4">
                        Nhập email đăng ký tài khoản HotelBooking. Chúng tôi sẽ gửi mã OTP hoặc đường dẫn để đặt lại mật khẩu.
                    </p>

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @Model.ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-action="ForgotPassword" method="post">
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email đăng ký</label>
                            <input asp-for="Email"
                                   class="form-control form-control-lg"
                                   placeholder="Nhập email bạn đã dùng để đăng ký" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100 mt-2">
                            Gửi mã OTP
                        </button>
                    </form>

                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <a asp-action="Login" class="text-decoration-none">
                            ← Quay lại đăng nhập
                        </a>
                        <a asp-action="Register" class="text-decoration-none">
                            Chưa có tài khoản? Đăng ký
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
