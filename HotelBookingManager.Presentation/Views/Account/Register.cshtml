@model HotelBookingManager.Presentation.Models.RegisterViewModel

@{
    ViewData["Title"] = "Đăng ký";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4 p-lg-5">
                    <h3 class="text-center mb-2 text-primary fw-semibold">
                        Tạo tài khoản HotelBooking
                    </h3>
                    <p class="text-center text-muted mb-4">
                        Đăng ký để quản lý đặt phòng, lưu thông tin khách và nhận ưu đãi dành riêng cho bạn.
                    </p>

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @Model.ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small"></div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email đăng nhập</label>
                            <input asp-for="Email"
                                   class="form-control form-control-lg"
                                   placeholder="ví dụ: ten@gmail.com" />
                            <small class="form-text text-muted">
                                Email dùng để đăng nhập và nhận thông báo đặt phòng.
                            </small>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label">Họ và tên</label>
                            <input asp-for="FullName"
                                   class="form-control form-control-lg"
                                   placeholder="Nhập họ và tên đầy đủ" />
                            <small class="form-text text-muted">
                                Tên này sẽ hiển thị trong thông tin đặt phòng và hoá đơn.
                            </small>
                            <span asp-validation-for="FullName" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label">Số điện thoại</label>
                            <input asp-for="PhoneNumber"
                                   class="form-control form-control-lg"
                                   placeholder="Số điện thoại liên hệ" />
                            <small class="form-text text-muted">
                                Dùng để liên hệ xác nhận và hỗ trợ trong quá trình lưu trú.
                            </small>
                            <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Gender" class="form-label">Giới tính</label>
                            <select asp-for="Gender" class="form-select form-select-lg">
                                <option value="">-- Chọn giới tính (tuỳ chọn) --</option>
                                <option value="Male">Nam</option>
                                <option value="Female">Nữ</option>
                            </select>
                            <small class="form-text text-muted">
                                Có thể để trống nếu bạn không muốn cung cấp.
                            </small>
                            <span asp-validation-for="Gender" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IdentityNumber" class="form-label">Số CCCD / CMND</label>
                            <input asp-for="IdentityNumber"
                                   class="form-control form-control-lg"
                                   placeholder="Nhập số CCCD/CMND (tuỳ chọn)" />
                            <small class="form-text text-muted">
                                Hữu ích khi làm thủ tục nhận phòng nhanh hơn.
                            </small>
                            <span asp-validation-for="IdentityNumber" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DateOfBirth" class="form-label">Ngày sinh</label>
                            <input asp-for="DateOfBirth"
                                   type="date"
                                   class="form-control form-control-lg" />
                            <small class="form-text text-muted">
                                Giúp cá nhân hoá ưu đãi và trải nghiệm lưu trú (tuỳ chọn).
                            </small>
                            <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
                        </div>

                        <hr class="my-4" />

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Mật khẩu</label>
                            <input asp-for="Password"
                                   type="password"
                                   class="form-control form-control-lg"
                                   placeholder="Ít nhất 6 ký tự, gồm chữ và số" />
                            <small class="form-text text-muted">
                                Nên dùng mật khẩu khó đoán và không trùng với các nơi khác.
                            </small>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Nhập lại mật khẩu</label>
                            <input asp-for="ConfirmPassword"
                                   type="password"
                                   class="form-control form-control-lg"
                                   placeholder="Nhập lại đúng mật khẩu ở trên" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <button type="submit" class="btn btn-primary btn-lg px-4">
                                Đăng ký
                            </button>
                            <a asp-action="Login" class="btn btn-link">
                                Đã có tài khoản? Đăng nhập
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
