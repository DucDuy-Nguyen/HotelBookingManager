@model HotelBookingManager.Presentation.Models.FeedbackCreateViewModel
@{
    ViewData["Title"] = "Gửi đánh giá";
}

<!-- Google Fonts & Icons -->
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600;700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    :root {
        --primary: #0d6efd;
        --success: #198754;
        --dark: #1a1a1a;
        --gray: #6c757d;
        --light: #f8f9fa;
    }

    body {
        font-family: 'Inter', sans-serif;
    }

    h1, label {
        font-family: 'Playfair Display', serif;
    }

    .hero-bg {
        background: linear-gradient(rgba(0,0,0,0.55), rgba(0,0,0,0.45)), url('https://images.unsplash.com/photo-1566073771259-6a8506099945?q=80&w=2070&auto=format&fit=crop') center/cover;
        height: 340px;
        border-radius: 0 0 32px 32px;
        position: relative;
    }

    .form-label {
        font-weight: 600;
        color: var(--dark);
    }

    .form-control:focus {
        border-color: var(--primary);
        box-shadow: 0 0 0 0.25rem rgba(13,110,253,0.25);
    }

    .form-select:focus {
        border-color: var(--primary);
        box-shadow: 0 0 0 0.25rem rgba(13,110,253,0.25);
    }

    .btn-rounded {
        border-radius: 50px;
        padding: 0.7rem 1.8rem;
        font-weight: 500;
    }
</style>

<!-- HERO HEADER -->
<div class="hero-bg position-relative mb-5">
    <div class="container h-100 d-flex flex-column justify-content-center text-white px-4">
        <h1 class="display-4 fw-bold mb-2">Gửi đánh giá</h1>
        <p class="lead opacity-75 mb-0">
            Chia sẻ trải nghiệm của bạn về khách sạn
        </p>
    </div>
</div>

<!-- FORM CARD -->
<div class="container mb-5" style="margin-top: -120px; position: relative; z-index: 10;">
    <div class="card border-0 shadow-xl mx-auto overflow-hidden rounded-4"
         style="max-width: 1100px; background: white;">
        <div class="card-body p-5 p-md-5">

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger mb-4 rounded-3">
                    <ul class="mb-0">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }

            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Feedback.UserId)

                <div class="row g-5">
                    <!-- Cột trái -->
                    <div class="col-lg-6">
                        <div class="mb-4">
                            <label asp-for="Feedback.HotelId" class="form-label">Khách sạn</label>
                            <select asp-for="Feedback.HotelId"
                                    asp-items="@(new SelectList(Model.Hotels, "HotelId", "Name"))"
                                    class="form-select form-select-lg">
                                <option value="">-- Chọn khách sạn --</option>
                            </select>
                            <span asp-validation-for="Feedback.HotelId" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Feedback.BookingId" class="form-label">Booking liên quan</label>
                            <select asp-for="Feedback.BookingId"
                                    asp-items="@(new SelectList(Model.Bookings, "BookingId", "BookingId"))"
                                    class="form-select form-select-lg">
                                <option value="">-- Chọn booking --</option>
                            </select>
                            <span asp-validation-for="Feedback.BookingId" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Feedback.Rating" class="form-label">Đánh giá (1–5)</label>
                            <input asp-for="Feedback.Rating"
                                   class="form-control form-control-lg"
                                   type="number" min="1" max="5" step="1" />
                            <span asp-validation-for="Feedback.Rating" class="text-danger small mt-1 d-block"></span>
                        </div>
                    </div>

                    <!-- Cột phải -->
                    <div class="col-lg-6">
                        <div class="mb-4">
                            <label asp-for="Feedback.Comment" class="form-label">Nhận xét</label>
                            <textarea asp-for="Feedback.Comment" rows="8" class="form-control"></textarea>
                            <span asp-validation-for="Feedback.Comment" class="text-danger small mt-1 d-block"></span>
                        </div>
                    </div>
                </div>

                <!-- Nút hành động -->
                <div class="mt-5 pt-5 d-flex flex-column flex-md-row justify-content-between align-items-center gap-4 border-top pt-5">
                    <a asp-action="Index" class="btn btn-outline-secondary px-5 py-3 rounded-pill fw-medium">
                        ← Quay lại danh sách
                    </a>
                    <button type="submit" class="btn btn-primary px-5 py-3 fw-bold rounded-pill shadow btn-rounded"
                            style="background: var(--primary); border: none; font-size: 1.1rem;">
                        Gửi đánh giá
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}