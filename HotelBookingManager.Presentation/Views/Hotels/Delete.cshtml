@model HotelBookingManager.Presentation.Models.HotelViewModel

<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600;700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">

<!-- Bootstrap Icons (nếu chưa có trong layout) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    :root {
        --danger: #dc3545;
        --dark: #1a1a1a;
        --gray: #6c757d;
        --light: #f8f9fa;
    }

    body {
        font-family: 'Inter', sans-serif;
    }

    h1, h4 {
        font-family: 'Playfair Display', serif;
    }

    .hero-bg {
        background: linear-gradient(180deg, rgba(127,29,29,.85), rgba(127,29,29,.75)), url('@(string.IsNullOrWhiteSpace(Model.ImageUrl) ? "https://images.unsplash.com/photo-1566073771259-6a8506099945?q=80&w=2070&auto=format&fit=crop"
                                : Model.ImageUrl) ') center/cover no-repeat; height: 220px; border-radius: 0 0 28px 28px;
        position: relative;
    }

    .alert-danger {
        border-radius: 12px;
        font-weight: 500;
    }

    .modal-content {
        border-radius: 18px;
        overflow: hidden;
    }

    .modal-header.bg-danger {
        background: var(--danger) !important;
    }
</style>

<!-- HERO HEADER (sử dụng ảnh khách sạn nếu có, không có link quay lại) -->
<div class="hero-bg position-relative mb-5">
    <div class="container h-100 d-flex flex-column justify-content-center text-white text-center px-4">
        <h1 class="fw-bold mb-1 display-5">Xóa khách sạn</h1>
        <p class="mb-0 opacity-75 fs-5">
            Hành động này không thể hoàn tác
        </p>
    </div>
</div>

<!-- CONTENT CARD -->
<div class="container" style="margin-top: -70px; position: relative; z-index: 2;">
    <div class="card border-0 shadow-lg mx-auto" style="max-width: 800px; border-radius: 22px;">
        <div class="card-body p-5">
            <div class="alert alert-danger mb-4 d-flex align-items-center gap-3">
                <i class="bi bi-exclamation-triangle-fill fs-4"></i>
                <div>
                    Bạn có chắc chắn muốn <strong>xóa vĩnh viễn</strong> khách sạn này?
                </div>
            </div>

            <h4 class="fw-bold mb-3 text-center">@Model.Name</h4>

            <dl class="row mb-5 g-3">
                <dt class="col-sm-4 text-muted fw-medium">Địa chỉ</dt>
                <dd class="col-sm-8">@Model.Address</dd>
                <dt class="col-sm-4 text-muted fw-medium">Thành phố</dt>
                <dd class="col-sm-8">@Model.City</dd>
                <dt class="col-sm-4 text-muted fw-medium">Quốc gia</dt>
                <dd class="col-sm-8">@Model.Country</dd>
            </dl>

            <!-- ACTIONS -->
            <div class="d-flex justify-content-between align-items-center gap-3 flex-wrap">
                <a asp-action="Index" class="btn btn-outline-secondary px-5 py-3 rounded-pill fw-medium">
                    ⬅ Hủy
                </a>
                <button type="button"
                        class="btn btn-danger px-5 py-3 rounded-pill fw-bold shadow"
                        data-bs-toggle="modal"
                        data-bs-target="#confirmDeleteModal">
                    🗑 Xóa khách sạn
                </button>
            </div>
        </div>
    </div>
</div>

<!-- CONFIRM MODAL -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg" style="border-radius: 18px;">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title fw-bold">Xác nhận xóa</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center py-4">
                <p class="mb-2">Bạn sắp <strong>xóa vĩnh viễn</strong> khách sạn:</p>
                <p class="fw-bold text-danger fs-4 mb-1">@Model.Name</p>
                <small class="text-muted">Hành động này không thể hoàn tác.</small>
            </div>
            <div class="modal-footer justify-content-center border-0 pb-4">
                <button type="button" class="btn btn-outline-secondary px-5 py-2 rounded-pill" data-bs-dismiss="modal">
                    Hủy
                </button>
                <form asp-action="Delete" method="post" class="d-inline">
                    <input type="hidden" asp-for="HotelId" />
                    <button type="submit" class="btn btn-danger px-5 py-2 rounded-pill fw-bold">
                        Xóa ngay
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>