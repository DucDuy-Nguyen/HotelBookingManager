@model HotelBookingManager.Presentation.Models.HotelSearchViewModel
@{
    var roleClaim = User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Role)?.Value;
    var roleId = string.IsNullOrEmpty(roleClaim) ? 3 : int.Parse(roleClaim);
}

<!-- Google Fonts & Icons -->
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600;700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    :root {
        --primary: #0d6efd;
        --success: #198754;
        --warning: #ffc107;
        --danger: #dc3545;
        --dark: #1a1a1a;
        --gray: #6c757d;
        --light: #f8f9fa;
    }

    body {
        font-family: 'Inter', sans-serif;
    }

    h2 {
        font-family: 'Playfair Display', serif;
        font-weight: 700;
    }

    .hero-bg {
        background: linear-gradient(rgba(0,0,0,0.65), rgba(0,0,0,0.65));
        height: 320px;
        border-radius: 0 0 32px 32px;
    }

    .hotel-card {
        border: none;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0,0,0,0.12);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .hotel-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 50px rgba(0,0,0,0.18);
        }

    .hotel-img {
        height: 220px;
        object-fit: cover;
        width: 100%;
        transition: transform 0.4s ease;
    }

    .hotel-card:hover .hotel-img {
        transform: scale(1.05);
    }

    .btn-rounded {
        border-radius: 50px;
        padding: 0.65rem 1.5rem;
        font-weight: 500;
        transition: all 0.3s ease;
    }

        .btn-rounded:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(0,0,0,0.15);
        }

    .rating-badge {
        background: var(--warning);
        color: var(--dark);
        font-weight: bold;
        padding: 0.55rem 1rem;
        border-radius: 50px;
    }
</style>

<!-- HERO HEADER -->
<div class="hero-bg position-relative mb-5">
    <div class="container h-100 d-flex flex-column justify-content-center text-white text-center px-4">
        <h1 class="display-5 fw-bold mb-2">Danh sách khách sạn</h1>
        <p class="lead opacity-75 mb-0">Tìm kiếm và quản lý khách sạn</p>
    </div>
</div>

<!-- SEARCH FORM -->
<div class="container mb-5" style="margin-top: -80px; position: relative; z-index: 10;">
    <div class="card border-0 shadow-xl rounded-4 mx-auto" style="max-width: 1100px;">
        <div class="card-body p-4">
            <form method="get" asp-action="Index">
                <div class="row g-3 align-items-end">
                    <div class="col-md-5">
                        <label class="form-label fw-semibold">Thành phố</label>
                        <input type="text" name="city" value="@Model.City"
                               class="form-control form-control-lg rounded-pill shadow-sm"
                               placeholder="Nhập tên thành phố..." />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label fw-semibold">Trạng thái</label>
                        <select name="statusFilter" class="form-select form-select-lg rounded-pill shadow-sm">
                            <option value="active" selected="@(Model.StatusFilter == "active")">Đang hoạt động</option>
                            <option value="inactive" selected="@(Model.StatusFilter == "inactive")">Ngừng hoạt động</option>
                            <option value="all" selected="@(Model.StatusFilter == "all")">Tất cả</option>
                        </select>
                    </div>
                    <div class="col-md-3 d-flex gap-2">
                        <button type="submit" class="btn btn-primary btn-lg btn-rounded flex-fill shadow">
                            <i class="bi bi-search me-1"></i> Tìm kiếm
                        </button>
                        @if (roleId == 1)
                        {
                            <a asp-action="Create" class="btn btn-success btn-lg btn-rounded shadow">
                                <i class="bi bi-plus-lg me-1"></i> Thêm mới
                            </a>
                        }
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- HOTEL LIST -->
<div class="container pb-5">
    @if (Model.Hotels == null || !Model.Hotels.Any())
    {
        <div class="alert alert-info text-center py-5 rounded-4 shadow-sm">
            <i class="bi bi-building fs-1 mb-3 opacity-75 d-block"></i>
            Không tìm thấy khách sạn nào với bộ lọc hiện tại.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var h in Model.Hotels)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="hotel-card h-100">
                        <!-- Ảnh khách sạn -->
                        <div class="position-relative">
                            @if (!string.IsNullOrEmpty(h.ImageUrl))
                            {
                                <img src="@h.ImageUrl"
                                     alt="@h.Name"
                                     class="hotel-img"
                                     onerror="this.src='https://images.unsplash.com/photo-1566073771259-6a8506099945?q=80&w=800';" />
                            }
                            else
                            {
                                <div class="bg-light d-flex align-items-center justify-content-center" style="height: 220px;">
                                    <i class="bi bi-building fs-1 text-muted"></i>
                                </div>
                            }
                        </div>

                        <!-- Nội dung -->
                        <div class="p-4">
                            <h5 class="fw-bold mb-2">@h.Name</h5>
                            <p class="text-muted mb-3">
                                <i class="bi bi-geo-alt me-1"></i> @h.Address, @h.City, @h.Country
                            </p>

                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <span class="rating-badge">
                                    ⭐ @h.Rating
                                </span>
                                @if (h.IsActive)
                                {
                                    <span class="badge bg-success px-3 py-2">Đang hoạt động</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary px-3 py-2">Ngừng hoạt động</span>
                                }
                            </div>

                            <div class="d-flex flex-wrap gap-2">
                                <a asp-action="Details" asp-route-id="@h.HotelId"
                                   class="btn btn-outline-info btn-sm btn-rounded hover-lift">
                                    <i class="bi bi-eye me-1"></i> Chi tiết
                                </a>

                                @if (roleId == 1 || roleId == 2)
                                {
                                    <a asp-action="Edit" asp-route-id="@h.HotelId"
                                       class="btn btn-outline-warning btn-sm btn-rounded hover-lift">
                                        <i class="bi bi-pencil me-1"></i> Sửa
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@h.HotelId"
                                       class="btn btn-outline-danger btn-sm btn-rounded hover-lift"
                                       onclick="return confirm('Xóa khách sạn @h.Name?');">
                                        <i class="bi bi-trash me-1"></i> Xóa
                                    </a>
                                }

                                <a asp-controller="Rooms" asp-action="ByHotel"
                                   asp-route-hotelId="@h.HotelId"
                                   asp-route-onlyAvailable="true"
                                   class="btn btn-primary btn-sm btn-rounded hover-lift">
                                    <i class="bi bi-door-open me-1"></i> Phòng còn trống
                                </a>
                                <a asp-controller="Rooms" asp-action="ByHotel"
                                   asp-route-hotelId="@h.HotelId"
                                   asp-route-onlyAvailable="false"
                                   class="btn btn-secondary btn-sm btn-rounded hover-lift">
                                    <i class="bi bi-door-closed me-1"></i> Tất cả phòng
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>