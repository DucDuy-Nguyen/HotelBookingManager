@model HotelBookingManager.Presentation.Models.HotelViewModel

<!-- Google Fonts & Icons -->
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600;700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    :root {
        --primary: #0d6efd;
        --success: #198754;
        --dark: #1a1a1a;
        --gray: #6c757d;
        --light: #f8f9fa;
    }

    body {
        font-family: 'Inter', sans-serif;
    }

    h1, label {
        font-family: 'Playfair Display', serif;
    }

    .hero-bg {
        background: linear-gradient(rgba(0,0,0,0.55), rgba(0,0,0,0.45)), url('https://images.unsplash.com/photo-1566073771259-6a8506099945?q=80&w=2070&auto=format&fit=crop') center/cover;
        height: 340px;
        border-radius: 0 0 32px 32px;
        position: relative;
    }

    .form-label {
        font-weight: 600;
        color: var(--dark);
    }

    .form-control:focus {
        border-color: var(--primary);
        box-shadow: 0 0 0 0.25rem rgba(13,110,253,0.25);
    }

    .form-check-input:checked {
        background-color: var(--primary);
        border-color: var(--primary);
    }

    .btn-rounded {
        border-radius: 50px;
        padding: 0.7rem 1.8rem;
        font-weight: 500;
    }
</style>

<!-- HERO HEADER -->
<div class="hero-bg position-relative mb-5">
    <div class="container h-100 d-flex flex-column justify-content-center text-white px-4">
        <h1 class="display-4 fw-bold mb-2">Thêm khách sạn mới</h1>
        <p class="lead opacity-75 mb-0">
            Nhập thông tin chi tiết để thêm vào hệ thống
        </p>
    </div>
</div>

<!-- FORM CARD -->
<div class="container mb-5" style="margin-top: -120px; position: relative; z-index: 10;">
    <div class="card border-0 shadow-xl mx-auto overflow-hidden rounded-4"
         style="max-width: 1100px; background: white;">
        <div class="card-body p-5 p-md-5">

            <form asp-action="Create" method="post">
                <div class="row g-5">
                    <!-- Cột trái -->
                    <div class="col-lg-6">
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label">Tên khách sạn</label>
                            <input asp-for="Name" class="form-control form-control-lg" />
                            <span asp-validation-for="Name" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label">Mô tả</label>
                            <textarea asp-for="Description" rows="5" class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger small mt-1 d-block"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Address" class="form-label">Địa chỉ</label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="City" class="form-label">Thành phố</label>
                            <input asp-for="City" class="form-control" />
                            <span asp-validation-for="City" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Country" class="form-label">Quốc gia</label>
                            <input asp-for="Country" class="form-control" />
                            <span asp-validation-for="Country" class="text-danger small mt-1 d-block"></span>
                        </div>
                    </div>

                    <!-- Cột phải -->
                    <div class="col-lg-6">
                        <div class="mb-4">
                            <label asp-for="Rating" class="form-label">Đánh giá (Rating)</label>
                            <input asp-for="Rating" class="form-control" placeholder="Ví dụ: 4.5" step="0.1" />
                            <span asp-validation-for="Rating" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="PhoneNumber" class="form-label">Điện thoại</label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" type="email" />
                            <span asp-validation-for="Email" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ImageUrl" class="form-label">Ảnh đại diện (URL)</label>
                            <input asp-for="ImageUrl" class="form-control" placeholder="https://example.com/hotel.jpg" />
                            <span asp-validation-for="ImageUrl" class="text-danger small mt-1 d-block"></span>
                            <small class="text-muted mt-1 d-block">
                                Dán link ảnh để hiển thị ở trang chi tiết và danh sách
                            </small>
                        </div>

                        <div class="form-check form-switch mt-5">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" style="width: 3.2rem; height: 1.6rem; cursor: pointer;" checked />
                            <label asp-for="IsActive" class="form-check-label fw-semibold ms-3 fs-5">
                                Khách sạn đang hoạt động
                            </label>
                        </div>
                    </div>
                </div>

                <!-- Nút hành động -->
                <div class="mt-5 pt-5 d-flex flex-column flex-md-row justify-content-between align-items-center gap-4 border-top pt-5">
                    <a asp-action="Index" class="btn btn-outline-secondary px-5 py-3 rounded-pill fw-medium">
                        ← Quay lại danh sách
                    </a>
                    <button type="submit" class="btn btn-primary px-5 py-3 fw-bold rounded-pill shadow btn-rounded"
                            style="background: var(--primary); border: none; font-size: 1.1rem;">
                        💾 Lưu khách sạn mới
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}